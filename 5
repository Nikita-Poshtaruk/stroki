#include <iostream>
#include <conio.h>
using namespace std;
int main()
{
    char stroka[]="Eto prostaya simvolnaya stroka";
    char simvol;
    int j=0;
    cout<<stroka<<endl;
    cout<<"Vvedite iskomy simvol: ";
    cin>>simvol;
    for(int i=0; stroka[i]!='\0'; i++)
    {
        if(stroka[i]==simvol)
            {j++;}
    }
    cout<<"Simvol "<<simvol<<" vstrechaetsy "<<j<<" raz."<<endl;
    getch();
    return 0;   
}
