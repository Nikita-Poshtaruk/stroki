#include <iostream>
using namespace std;
void main()
{
char line[100];
        cout << "Enter line:";
        cin.getline(line, 100);
 
        for (int i = 0; i < 100; i++)
        {
            if (line[i] == '.') {
                line[i] = '!';
            }
 
        }
 
        cout << line << endl;
        cin.get(); cin.get();
    }
